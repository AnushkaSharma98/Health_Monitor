<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main_linear"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MainActivity"
    android:background="@android:color/white"
    tools:showIn="@layout/activity_main">


   <ViewFlipper
       android:id="@+id/viewFlip"

       android:layout_width="match_parent"
       android:layout_height="180dp"></ViewFlipper>
    <TextView
        android:id="@+id/tvDis"
        android:layout_marginTop="20dp"
        android:textSize="20sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/botBtn"
        android:text="Detect Disease"
        android:backgroundTint="#add827"
        android:layout_marginTop="30dp"
        android:layout_gravity="center"
        android:layout_width="300dp"
        android:layout_height="70dp" />
    <Button
        android:id="@+id/enterBtn"
        android:text="Enter Disease"
        android:backgroundTint="#36b9a5"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:layout_width="300dp"
        android:layout_height="70dp" />
    <Button
        android:id="@+id/mapBtn"
        android:text="Near by Hospitals"
        android:backgroundTint="#add827"
        android:layout_marginTop="30dp"
        android:layout_gravity="center"
        android:layout_width="300dp"
        android:layout_height="70dp" />


</LinearLayout>